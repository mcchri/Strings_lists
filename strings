#q23
nursery = input("Please enter a nursery rhyme ")
len_of_nursery = len(nursery)
print(len_of_nursery)

start = input("enter a starting number ")
start = int(start)
end = input("enter a ending number ")
end = int(end)
nurse = nursery[start:end]
print(nurse)

